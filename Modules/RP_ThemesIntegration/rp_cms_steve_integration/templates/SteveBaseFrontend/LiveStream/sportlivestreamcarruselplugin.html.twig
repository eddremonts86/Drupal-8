<section class="o_sport_home_important_events">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8 ">
                <div class="two thirds pad-left pad-right">
                    <h1 class="head_text grey"> {{ "sport_livestream_carrusel_head"|t|raw }}</h1>
                    <p class=" "> {{ "sport_livestream_carrusel_sudhead" |t|raw}}</p>

                </div>
            </div>
            <div class="col-xs-12 col-md-4 grounds">
                <div class="text-center">
                    <p class="udvalgte" >{{ "sport_livestream_carrusel_list_head"|t|raw }}</p>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only"></span>
                    </a>

                </div>
                <div id="carousel-example-generic" class="carousel slide grounds_items" data-ride="carousel">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">

                        {% for nodeData in tags %}
                            {% if loop.index == 1 %}
                                <div class="item active text-center">
                                    <p class="team_date"> <a href="{{nodeData.eventAlias }}">
                                        {{ nodeData.title }}<br> {{ nodeData.eventDate |date("d. M Y")}} kl. {{ nodeData.eventDate |date("H:i")}}
                                        </a>
                                    </p>
                                    {% for participant in nodeData.participantsList %}
                                    <a href="{{participant.participantAlias }}"> <img class="pull-left  img_left"    src="{{ file_url(participant.logo) }}"  alt="{{participant.name }}"></a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="item text-center">
                                    <p class="team_date"><a href="{{nodeData.eventAlias }}">
                                        {{ nodeData.title }}<br>
                                            {{ nodeData.eventDate |date("d. M Y")}} kl. {{ nodeData.eventDate |date("H:i")}}</a>
                                    </p>
                                    {% for participant in nodeData.participantsList %}
                                        <a href="{{participant.participantAlias }}"> <img class="pull-left  img_left"    src="{{ file_url(participant.logo) }}"  alt="{{participant.name }}"></a>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
