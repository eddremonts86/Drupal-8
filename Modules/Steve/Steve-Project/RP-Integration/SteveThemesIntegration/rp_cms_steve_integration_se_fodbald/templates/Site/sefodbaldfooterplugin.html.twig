<footer class="SiteFooter">
	<div class="container">
		<div class="row">
			<div class="col col-md-12 col-sm-12 col-xs-12 toTop">
				<a href="#" id="toTop">
					<i class="fa fa-chevron-up" aria-hidden="true"></i>
				</a>
			</div>
			<div class="col col-md-12 col-sm-12 col-xs-12 SocialLinks">
				{% if tags %}
					<ul>
						{% for soc in tags %}
							<li>
								<a href="{{ soc.link }}">
									{% if soc.image %}
										<img src="{{ file_url(soc.image) }}">
									{% endif %}
								</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</div>
		</div>
	</div>
</footer>