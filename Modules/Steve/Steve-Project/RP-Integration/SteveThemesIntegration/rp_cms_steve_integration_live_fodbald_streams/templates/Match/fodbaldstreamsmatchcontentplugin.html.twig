{% set event = tags|first %}
<section class="MatchContentPlugin {{ event.preview ? "MatchContentPage" : ''}}">
	{% if event.preview %}
		<div class="container EventContainer">
			<div class="row">
				<div class="col col-md-8 EventContent">
					<h1 class="EventTitle">{{ event.name }}</h1>
					
					<div class="sponsoredLogo">
			          <img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald_streams/src/images/img1.png" width="95" hspace="30" height="30" vspace="16">
			          <img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald_streams/src/images/img2.png" width="95" height="30">
			        </div>
			        
			        <div class="writer">
			        	<i class="fa fa-quote-left"></i>
			        	<img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald/src/images/profile_default.png">
			        	<p>- <a href="{{ event.userLink }}">{{ event.user }}</a><span>{{ event.date|date("d. F Y") }}</span></p>
			        </div>
				
					{% if event.description %}
						{{ event.description|raw }}
					{% endif %}
					
					<a href="#" class="btn">
						{{ 'fodbald_streams_match_btn'|t }}
					</a>
					
					<p class="disclaimer">{{ 'fodbald_streams_match_disclaimer'|t }}</p>
					<a href="#popup1" class="popUp">{{ 'fodbald_streams_match_popup'|t }}</a>
				</div>
				{% if events %}
					<div class="col col-md-4 col-sm-12 col-xs-12 TeamEvents">
						<div class="panel panel-default TeamEventsList">
							<div class="panel-heading">
								<h3 class="panel-title">{{ "fodbald_streams_team_matches_title"|t }}</h3>
							</div>
							<div class="panel-body">				
								<ul id="TeamEvents">
									{% for event in events %}
										<li>
											<a href="{{ event.link }}">{{ event.name }}</a>
											<span><i class="fa fa-calendar"></i>{{ event.date|date("d. F Y") }}</span>
										</li>
									{% endfor %}
								</ul>
							</div>
							<div class="panel-footer">
								<div class="holder"></div> 
							</div>
						</div>
					</div>
				{% endif%}
			</div>
		</div>
		<div class="container EventTeamsContainer">
			<div class="row">
				<div class="col col-md-12 ">
					<h2 class="EventTeamsTitle">{{ 'fodbald_streams_match_teams_title'|t }}</h2>
				</div>
				{% if event.teams.left %}	
					<div class="col col-md-6 col-sm-12 col-xs-12 TeamContainer">
						{% if event.teams.left.image %}
							<div class="TeamImageContainer">
								<img src="{{ file_url(event.teams.left.image) }}">
							</div>
						{% endif %}
						
						<h2 class="TeamName">{{ event.teams.left.name }}</h2>
						
						{% if event.teams.left.description %}
							<p>{{ event.teams.left.description }}</p>
						{% endif %}
						
						<a href="{{ event.teams.left.link }}" class="readMore">{{ "fodbald_streams_match_team_link"|t({ '@name': event.teams.left.name }) }} <i class="fa fa-arrow-right"></i></a>
					</div>
				{% endif %}
				
				{% if event.teams.right %}
					<div class="col col-md-6 col-sm-12 col-xs-12 TeamContainer">
						{% if event.teams.right.image %}
							<div class="TeamImageContainer">
								<img src="{{ file_url(event.teams.right.image) }}">
							</div>
						{% endif %}
						
						<h2 class="TeamName">{{ event.teams.right.name }}</h2>
						
						{% if event.teams.right.description %}
							<p>{{ event.teams.right.description }}</p>
						{% endif %}
						
						<a href="{{ event.teams.right.link }}" class="readMore">{{ "fodbald_streams_match_team_link"|t({ '@name': event.teams.right.name }) }} <i class="fa fa-arrow-right"></i></a>
					</div>
				{% endif %}
			</div>
		</div>
	{% else %}
		<div class="container">
		    <div class="row">
		      <div class="col col-md-12 col-sm-12 col-xs-12 EventContent">
		              <h1>{{ "fodbald_streams_event_head"|t }}</h1>
		        <div class="sponsoredLogo">
		          <img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald_streams/src/images/img1.png" width="95" hspace="30" height="30" vspace="16">
		          <img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald_streams/src/images/img2.png" width="95" height="30">
		        </div>
		              <p>{{ "fodbald_streams_event_text_1"|t }}</p>
		              <p>{{ "fodbald_streams_event_text_2"|t }}</p>
		              <p>{{ "fodbald_streams_event_text_3"|t }}</p>
		              <h2>{{ "fodbald_streams_event_subhead"|t }}</h2>
		              <p>{{ "fodbald_streams_event_text_4"|t }}</p>
		              <p>{{ "fodbald_streams_event_text_5"|t }}</p>     
		      </div>
		      <div class="col col-md-12 col-sm-12 col-xs-12 ProviderBlock">
		        <h1>{{ "fodbald_streams_providers_block_head"|t }}</h1>
		        <div class="row ProviderSteps">
		          <ul>
		            <li class="ProviderStep">
		              <img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald_streams/src/images/leptop-www.png">
		              <span>{{ "fodbald_streams_providers_block_step_1"|t }}</span>
		            </li>
		            <li class="ProviderStep">
		              <img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald_streams/src/images/leptop-pen.png">
		              <span>{{ "fodbald_streams_providers_block_step_2"|t }}</span>
		            </li>
		            <li class="ProviderStep">
		              <img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald_streams/src/images/leptop-play.png">
		              <span>{{ "fodbald_streams_providers_block_step_3"|t }}</span>
		            </li>
		          </ul>
		          <p>{{ "fodbald_streams_providers_block_text_1"|t }}</p>
		        </div>
		        <h4>{{ "fodbald_streams_providers_block_text_2"|t }}</h4>
		        <a href="#" class="btn arrow">{{ "fodbald_streams_providers_block_button"|t }}</a>
		        <a href="#popup1" class="popUp">{{ "fodbald_streams_providers_block_popup"|t }}</a>
		        <p class="disclaimer">{{ "fodbald_streams_providers_block_disclaimer"|t }}</p>
		      </div>
		    </div>
	    </div>
	{% endif %}
</section>	