{% if tags %}
    <section class="o_sport_home_important_events">
        <div class="row">
            <div class="container">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1  header_o_sport_home_important_events">
                        <h2 class="">{{ "sport_popularmatch_head"|t }}</h2>
                        <h3 class="">
                            {{ "sport_popularmatch_subhead"|t }}
                        </h3>
                    </div>
                    <div class="popularMatchCarousel carousel slide">
                        <div class="carousel-inner" role="listbox">
                            {% for nodeData in tags %}
                            {% if loop.index <= 3 %}
                                {% if loop.index == 1 %}
                                <div class="carousel-item active">
                                    {% else %}
                                    <div class="carousel-item">
                                        {% endif %}
                                        <div class="panel panel-default">
                                            <div class="panel-heading">

                                                {% for  participant in nodeData.participantsList %}
                                                    <div class="porticipant_one">{{ participant.name }}</div>
                                                {% endfor %}
                                            </div>
                                            <div class="panel-body">
                                                <div class="vs_logo vs_front">
                                                    <h4>{{ "VS" |t }}</h4>
                                                </div>
                                                <div class="teams">
                                                    {% for  participant in nodeData.participantsList %}
                                                        <div class="vs_logo team_logo_front">
                                                            <img class="team" src="{{ file_url(participant.logo) }}"
                                                                 width="70" height="70" alt="{{ participant.name }}">
                                                        </div>
                                                    {% endfor %}

                                                    <img class="ground_fealds"
                                                         src="http://images-v2-cdn.sesport.dk/sesport.dk-ver2/ground-small.png"
                                                         width="310" height="77" alt="ground-small">

                                                    <div class="team_logo_front_date">{{ nodeData.eventDate |date("d. M Y") }}
                                                        - {{ "kl." |t }} {{ nodeData.eventDate |date("H:i") }}</div>
                                                </div>
                                                <div class="body_text">
                                                    <div>
                                                        <p class="fs13_text">
                                                            {{ "sport_popular_match_intro"|t }}<br>
                                                            {{ "d." |t }}{{ nodeData.eventDate |date("d. M Y ") }} {{ "kl." |t }}{{ nodeData.eventDate |date("H:i") }}
                                                            <br>
                                                            {{ "sport_popular_match_end"|t }}
                                                        </p>
                                                        <a class="fs13_link"
                                                           href="{{ nodeData.eventAlias }}">{{ "sport_popular_match_subintro"|t }}
                                                            &gt;&gt;</a></div>
                                                </div>
                                                <div class="panel-footer">
                                                    <a role="button" class="btn arrow"
                                                       href="{{ nodeData.eventAlias }}" {{ colors ? attributes.setAttribute('style', 'background: linear-gradient(to bottom, ' ~ colors.button_gradient_light ~ ' 0, ' ~ colors.button_gradient_dark ~ ' 100%)') }}>
                                                        {{ "sport_popular_match_button"|t }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    {% set break = true %}
                                {% endif %}

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
{% endif %}