<section class="o-sport-stream">
    <div class="container">
        <main class='frontpage'>
            <div class="container">
                <div class="col-xs-12 text-center top_marging">
                    <h3 {{ colors ? attributes.setAttribute('style', 'color: ' ~ colors.main) : '' }} >{{ "sport_stream_head" | t }}</h3>
                </div>
                <div class="col-xs-12 stream_tabs">
                    <div class="tabbable tabs-left">

                        <ul class="nav nav-tabs">
                            <li class="text-center tabs_header">
                                <span class="inline pull-left Udbyder" {{ colors ? attributes.setAttribute('style', 'color: ' ~ colors.main) : '' }} >{{ "sport_stream_Udbyder"|t }}</span>
                                <span class="inline Kvalitet" {{ colors ? attributes.setAttribute('style', 'color: ' ~ colors.main) : '' }} >{{ "sport_stream_Kvalitet"|t }}</span>
                                <span class="inline pull-right Pris" {{ colors ? attributes.setAttribute('style', 'color: ' ~ colors.main) : '' }} >{{ "sport_stream_Pris"|t }}</span>
                            </li>
                            {% for stream in tags %}
                                {% if loop.index == 1 %}
                                    <li class="active" {{ colors ? attributes.setAttribute('style', 'background: linear-gradient(to bottom, ' ~ colors.tab_gradient_1 ~ ' 0, ' ~ colors.tab_gradient_2 ~ ' 14%, ' ~ colors.tab_gradient_3 ~ ' 61%); border-color:' ~ colors.main ~ ';') }}>
                                        <a href="#{{ stream.idTabsTemplate }}" data-toggle="tab">
                                            <div class="inline pull-left">
                                                {% if stream.streamIMG != '' %}
                                                    <img class="imgTabStream" alt="{{ stream.streamName }}" src="{{ file_url(stream.streamIMG) }}">
                                                {% else %}
                                                    <img class="imgTabStream"  {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                         alt="{{ stream.streamName }}" src="/themes/custom/stevethemebase/src/images/step1.png">
                                                {% endif %}

                                            </div>
                                            <div class="inline ">
                                    <span class="rating" data-rating="{{ stream.streamRating }}">
                                        {% for i in 1.. stream.streamRating %}
                                            <em class="fa fa-star"></em>
                                        {% endfor %}
                                        {% for i in 1.. (5 - stream.streamRating) %}
                                            {% if (5 - stream.streamRating) > 0 %}
                                                <em class="fa fa-star-o"></em>
                                            {% endif %}
                                        {% endfor %}
                                        </span>
                                            </div>
                                            <div class="inline pull-right">
                                                <i class="pull-left-mobile half-pad-left-mobile">{{ stream.streamPrice | striptags }}</i>
                                                <em class="icon-angle-right absolute right top gap-right fs20 mobile-only"></em>
                                            </div>
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="">
                                        <a href="#{{ stream.idTabsTemplate }}" data-toggle="tab">
                                            <div class="inline pull-left">


                                                {% if stream.streamIMG != '' %}
                                                    <img class="imgTabStream" alt="{{ stream.streamName }}" src="{{ file_url(stream.streamIMG) }}">
                                                {% else %}
                                                    <img class="imgTabStream"  {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                         alt="{{ stream.streamName }}" src="/themes/custom/stevethemebase/src/images/step1.png">
                                                {% endif %}




                                            </div>
                                            <div class="inline ">
                                        <span class="rating" data-rating="{{ stream.streamRating }}">
                                           {% for i in 1.. stream.streamRating %}
                                               <em class="fa fa-star"></em>
                                           {% endfor %}
                                            {% for i in 1.. (5 - stream.streamRating) %}
                                                {% if (5 - stream.streamRating) > 0 %}
                                                    <em class="fa fa-star-o"></em>
                                                {% endif %}
                                            {% endfor %}
                                        </span>
                                            </div>
                                            <div class="inline pull-right">
                                                <i class="pull-left-mobile half-pad-left-mobile">{{ stream.streamPrice | striptags }}</i>
                                                <em class="icon-angle-right absolute right top gap-right fs20 mobile-only"></em>
                                            </div>
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>

                        <div class="tab-content">
                            {% for stream in tags %}
                                {% if loop.index == 1 %}
                                    <div class="tab-pane active" id="{{ stream.idTabsTemplate }}">
                                        <div class="col-xs-12 tab-pane-head">

                                            {% if stream.streamIMG != '' %}
                                            <img alt="{{ stream.streamName }}" class="pull-left  hide-on-small-tablet hide-on-mobile" src="{{ file_url(stream.streamIMG) }}">
                                            {% else %}
                                                <img class="pull-left  hide-on-small-tablet hide-on-mobile" {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                     alt="{{ stream.streamName }}" src="/themes/custom/stevethemebase/src/images/step1.png">
                                            {% endif %}

                                            <h4 class="pull-left w-65">
                                                <span class="hide-on-mobile">{{ "sport_stream_livestream_head" | t }}</span> {{ stream.streamName }}
                                            </h4>
                                        </div>
                                        <div class="col-xs-12 tab-pane-body-text">
                                            <h5 class="">{{ stream.FrontPageQualityHeading }}:</h5>
                                            <p>{{ stream.FrontPageQualityContent | raw }}</p>
                                            <h5 class="">{{ stream.FrontPageUdvalgHeading }}:</h5>
                                            <p>{{ stream.FrontPageUdvalgContent | raw }}</p>
                                            <h5 class="">{{ stream.FrontPagePriceHeading }}:</h5>
                                            <p>{{ stream.FrontPagePriceContent | raw }}</p>
                                            <h5 class="">{{ "sport_stream_livestream_subhead" | t }}:</h5>
                                        </div>
                                        <div class="col-xs-12 tab-pane-body-img">

                                            <div class="inline text-center col-md-3">
                                                <h4 class="open-sans fs16 fs11m half-gap-bottom">
                                                    <strong>{{ stream.FrontPageIcons1Heading }}</strong>
                                                </h4>
                                                <a target="_blank" href="{{ stream.streamName }}"
                                                   data-google-track="yes"
                                                   data-category="Football Front Page" data-action="Click"
                                                   data-label="{{ stream.streamName }}">

                                                    {% if stream.step1 != '' %}
                                                        <img class="mw80pm"  alt="{{ stream.streamName }}" width="92" height="70" class="imgTabStream" alt="{{ stream.streamName }}" src="{{ file_url(stream.step1) }}">
                                                    {% else %}
                                                        <img class="mw80pm" {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                             alt="{{ stream.streamName }}" width="92" height="70" src="/themes/custom/stevethemebase/src/images/step1.png">
                                                    {% endif %}

                                                </a>
                                                <p class="lh18 hide-on-mobile">{{ stream.FrontPageIcons1Subheading }}</p>
                                            </div>

                                            <div class="inline col-md-1 pad_top">
                                                <img width="56" height="29" alt="Pil" src="/themes/custom/stevethemebase/src/images/line-arw.png" style="top:45px;" class="absolute hide-on-mobile hide-on-ipad">
                                            </div>

                                            <div class="inline text-center col-md-3">
                                                <h4 class="open-sans fs16 fs11m half-gap-bottom">
                                                    <strong>{{ stream.FrontPageIcons2Heading }}</strong></h4>
                                                <a target="_blank" href="{{ stream.streamName }}" data-google-track="yes" data-category="Football Front Page" data-action="Click" data-label="{{ stream.streamName }}">

                                                  {% if stream.step2 != '' %}
                                                    <img class="mw80pm" {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                         alt="Opret en konto og Stream fodbold live" width="92"
                                                         height="70" src="{{ file_url(stream.step2) }}">
                                                  {% else %}
                                                    <img class="mw80pm" {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                         alt="Opret en konto og Stream fodbold live" width="92"
                                                         height="70" src="/themes/custom/stevethemebase/src/images/step2.png">
                                                  {% endif %}


                                                </a>
                                                <p class="lh18 hide-on-mobile">{{ stream.FrontPageIcons2Subheading }}</p>
                                            </div>

                                            <div class="inline col-md-1 pad_top">
                                                <img width="56" height="29" alt="Pil"
                                                     src="/themes/custom/stevethemebase/src/images/line-arw.png"
                                                     style="top:45px;" class="absolute hide-on-mobile hide-on-ipad">
                                            </div>

                                            <div class="inline text-center col-md-3">
                                                <h4 class="open-sans fs16 fs11m half-gap-bottom">
                                                    <strong>{{ stream.FrontPageIcons3Heading }}</strong></h4>
                                                <a target="_blank" href="{{ stream.streamName }}" data-google-track="yes" data-category="Football Front Page" data-action="Click" data-label="{{ stream.streamName }}">
                                                  {% if stream.step3 != '' %}
                                                    <img class="mw80pm" alt="green-icon-3" width="92" height="70" {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                         src="{{ file_url(stream.step3) }}">
                                                  {% else %}
                                                    <img class="mw80pm" alt="green-icon-3" width="92" height="70" {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                         src="/themes/custom/stevethemebase/src/images/step3.png">
                                                  {% endif %}
                                                </a>
                                                <p class="lh18 zero hide-on-mobile">{{ stream.FrontPageIcons3Subheading }}</p>
                                                <small class="gray fs9 block hide-on-mobile">{{ stream.FrontPageIcons3note |raw }}</small>
                                            </div>

                                        </div>
                                        <div class="col-xs-12 tab-pane-body-btn">
                                            <div class="pull-left">
                                                <a target="_blank" role="button" class="btn gray arrow"
                                                   href="{{ stream.FrontPageButtonsReviewButton }}">
                                                    {{ stream.FrontPageButtonsReviewButtonText }}
                                                </a>

                                                <a target="_blank" role="button" class="btn arrow"
                                                   href="{{ stream.FrontPageAffiliateButtonUrl }}" {{ colors ? attributes.setAttribute('style', 'background: linear-gradient(to bottom, ' ~ colors.button_gradient_light ~ ' 0, ' ~ colors.button_gradient_dark ~ ' 100%)') }}>
                                                    {{ stream.FrontPageAffiliateButtonText }}
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                {% else %}
                                    <div class="tab-pane" id="{{ stream.idTabsTemplate }}">
                                        <div class="col-xs-12 -tab-pane-head">
                                            {% if stream.streamIMG != '' %}
                                                <img alt="{{ stream.streamName }}" class="pull-left  hide-on-small-tablet hide-on-mobile" src="{{ file_url(stream.streamIMG) }}">
                                            {% else %}
                                                <img class="pull-left  hide-on-small-tablet hide-on-mobile" {{ colors ? attributes.setAttribute('style', 'background-color: ' ~ colors.main) : '' }}
                                                     alt="{{ stream.streamName }}" src="/themes/custom/stevethemebase/src/images/step1.png">
                                            {% endif %}
                                            <h4 class="pull-left w-65">
                                                <span class="hide-on-mobile">{{ "sport_stream_livestream_head" | t }}</span> {{ stream.streamName }}
                                            </h4>
                                        </div>
                                        <div class="col-xs-12 tab-pane-body-text">
                                            <h5 class="">{{ stream.FrontPageQualityHeading }}:</h5>
                                            <p>{{ stream.FrontPageQualityContent | raw }}</p>
                                            <h5 class="">{{ stream.FrontPageUdvalgHeading }}:</h5>
                                            <p>{{ stream.FrontPageUdvalgContent | raw }}</p>
