<section class="MatchHeadPlugin ContentHeader">
	<div class="container">
		<div class="row">
			<div class="col col-md-10 vs-block">
				{% set event = tags|first %}
				<a href="{{ event.matchLink }}" class="vs-block-inner">
					{% if event.matchTeams.left %}
						<div class="vs-block-team team-left">
							{% if event.matchTeams.left.image %}
								<div class="vs-block-team-image">
									<img src="{{ file_url(event.matchTeams.left.image) }}" alt="{{ event.matchTeams.left.name }}">
								</div>
							{% endif %}
							<span class="vs-block-team-name">{{ event.matchTeams.left.name }}</span>			
						</div>
					{% endif %}
					<div class="vs-block-info">
						<span class="vs-block-vs">{{"live_fodbald_head_vs" | t}}</span>
						<p class="vs-block-date">{{event.matchDate|date("d. M Y") }}</p>
						<p class="vs-block-date">{{event.matchDate|date("H:i") }}</p>
					</div>
					{% if event.matchTeams.right %}
						<div class="vs-block-team team-right">
							{% if event.matchTeams.right.image %}
								<div class="vs-block-team-image">
									<img src="{{ file_url(event.matchTeams.right.image) }}" alt="{{ event.matchTeams.right.name }}">
								</div>
							{% endif %}
							<span class="vs-block-team-name">{{ event.matchTeams.right.name }}</span>
						</div>
					{% endif %}
				</a>
			</div>
			<div class="col col-md-2 showcase promo">
				<img src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald/src/images/anouncement.png" alt="anouncement" class="showacase-promo">
				<div class="showcase-inner">
					<div class="showcase-head">
						{{ "live_fodbald_showcase_head" | t }}
						<span class="showcase-subhead">
							{{ "live_fodbald_showcase_subhead" | t }}
						</span>
					</div>
					<ul class="showcase-steps">
						<li class="showcase-step">
							<span class="showcase-step-1"></span>
							{{ "live_fodbald_showcase_step_1" | t }}
						</li>
						<li class="showcase-step">
							<span class="showcase-step-2"></span>
							{{ "live_fodbald_showcase_step_2" | t }}
						</li>
						<li class="showcase-step">
							<span class="showcase-step-3"></span>
							{{ "live_fodbald_showcase_step_3" | t }}
						</li>
					</ul>
					<a href="" class="btn">
						{{ "live_fodbald_showcase_button" | t}}
					</a>
					<p class="disclaimer">
						{{ "live_fodbald_showcase_disclaimer" | t}}
					</p>
					<a href="#popup-test" class="popUp">
						{{ "live_fodbald_showcase_popup" | t}}
					</a>
				</div>
			</div>
		</div>
	</div>
</section>