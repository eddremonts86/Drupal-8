<section class="HomeHeadPlugin ContentHeader">
	<div class="container">
		<div class="row">
			<div class="col col-md-8 title">
				<h1>{{ "live_fodbald_home_head_title" | t}}</h1>
				<div class="arrow">
					<img src="modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_live_fodbald/src/images/arrow_matchpage.png" alt="arrow">
				</div>
			</div>
			<div class="col col-md-3 match-select">
				<h2>{{ "live_fodbald_home_head_matches_text" | t}}</h2>
				{% set fLeague = null %}
				{% set fMatch = null %}
				
				<select id="select-legue">
					{% for day in tags.schedule %}
						{% for key, league in day.leagues %}
							{% set LeagueID = 'L' ~ key %}
							{% if fLeague is null %}
								{% set fLeague = LeagueID %}
							{% endif %}
							
							
							<option value="{{ LeagueID }}" {{ fLeague == LeagueID ? 'selected="selected"'}}>{{ league.name }}</option>
						{% endfor %}
					{% endfor %}
				</select>
				<select id="select-match">
					{% for day in tags.schedule %}
						{% for key, league in day.leagues %}
							{% set LeagueID = 'L' ~ key %}
							{% for match in league.list %}
							
								{% set selected = 0 %}
								{% if LeagueID == fLeague and fMatch is null %}
									{% set fMatch = match.link %}
									{% set selected = 1 %}
								{% endif %}
								<option value="{{ match.link }}" {{ selected ? 'selected="selected"'}} id="{{ LeagueID }}" {{ fLeague != LeagueID ? 'style="display: none;"'}}>{{ match.name }}</option>
							{% endfor %}
						{% endfor %}
					{% endfor %}
				</select>	
				
				<a href="{{ fMatch }}" class="btn">{{ "live_fodbald_home_head_button" | t}}</a>
			</div>
		</div>
	</div>
</section>