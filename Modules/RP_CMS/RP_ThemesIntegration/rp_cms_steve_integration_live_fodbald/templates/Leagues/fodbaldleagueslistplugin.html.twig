<section class="LeaguesListPlugin">
	<div class="container">
		<div class="row">
			<div class="col col-md-12">
				<h2>{{"live_fodbald_leagues_list_title" | t}}</h2>
			</div>
		</div>
		<div class="row LeagueList">
			{% if tags %}
				{% for region in tags %}
					<div class="col col-md-4">
						<div class="panel panel-default List">
							<div class="panel-heading">
								<h3 class="panel-title">{{ region.name }}</h3>
							</div>
							<div class="panel-body">
								{% if region.list %}
								<ul>
									{% for league in region.list %}
										<li><a href="{{league.link}}"><img src="{{ file_url(league.img) }}">{{ league.name}}</a></li>
									{% endfor %}
								</ul>
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor%}
			{% endif %}
		</div>
	</div>
</section>