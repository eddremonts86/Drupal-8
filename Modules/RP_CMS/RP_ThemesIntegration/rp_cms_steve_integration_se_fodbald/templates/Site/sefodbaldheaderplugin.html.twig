<header class="SiteHeader">
	<div class="container">
		<div class="row">
			<nav class="navbar navbar-default">
				<div class="container-fluid">
					<div class="navbar-header">
						<a class="navbar-brand" href="{{ url('<front>') }}">
							<img alt="Brand" src="/modules/custom/RP_CMS/RP_ThemesIntegration/rp_cms_steve_integration_se_fodbald/src/images/logo.png">
						</a>
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
							<span class="sr-only">Toggle navigation</span>
							<i class="fa fa-list" aria-hidden="true"></i>
						</button>
					</div>
					<div id="navbar" class="navbar-collapse collapse">
						{% if menu %}
							<ul  class="nav navbar-nav">
								{% for link in menu %}
									<li {{ link.active ? 'class="active"'}}>
										<a href="{{ link.link }}">
											{{ link.name }}
											{% if link.active %}
												<span class="sr-only">(current)</span>
											{% endif %}
										</a>
										{% if link.childs %}
											<ul class="menu">
												{% for sublink in link.childs %}
													<li><a href="{{ sublink.link }}">{{ sublink.name }}</a></li>
												{% endfor %}
											</ul>
										{% endif %}
									</li>
								{% endfor%}
							</ul>
						{% endif %}						
					</div>
				</div>
			</nav>
		</div>
	</div>
</header>