<section class="TeamsHeadPlugin ContentHeader">
	{% if tags %}
		<ul class="headSlider">
			{% for event in tags %}
				<li>
					<div class="container">
						<div class="row">
							<div class="col col-md-12 vs-block">
								<a href="{{ event.link }}" class="vs-block-inner">
									{% if event.teams.left %}
										<div class="vs-block-team team-left">
											{% if event.teams.left.image %}
												<div class="vs-block-team-image">
													<img src="{{ file_url(event.teams.left.image) }}" alt="{{ event.teams.left.name }}">
												</div>
											{% endif %}
											<span class="vs-block-team-name">{{ event.teams.left.name }}</span>			
										</div>
									{% endif %}
									<div class="vs-block-info">
										<p class="vs-block-vs"><span>{{"fodbald_streams_head_vs" | t}}</span></p>
										<p class="vs-block-date">{{event.date|date("d. M Y") }}</p>
										<p class="vs-block-time">{{event.date|date("H:i") }}</p>
									</div>
									{% if event.teams.right %}
										<div class="vs-block-team team-right">
											{% if event.teams.right.image %}
												<div class="vs-block-team-image">
													<img src="{{ file_url(event.teams.right.image) }}" alt="{{ event.teams.right.name }}">
												</div>
											{% endif %}
											<span class="vs-block-team-name">{{ event.teams.right.name }}</span>
										</div>
									{% endif %}
								</a>
							</div>
						</div>
					</div>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
</section>