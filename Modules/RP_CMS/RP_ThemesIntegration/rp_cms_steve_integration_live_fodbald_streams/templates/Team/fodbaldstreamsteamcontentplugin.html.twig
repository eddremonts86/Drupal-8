<section class="TeamContentPlugin">
	<div class="container TeamContentContainer">	
		<div class="row">
			<div class="col col-md-8 col-sm-12 col-xs-12 TeamContent">
				<h1>{{ tags.name }}</h1>
				{{ tags.description|raw }}
			</div>
			{% if events %}
				<div class="col col-md-4 col-sm-12 col-xs-12 TeamEvents">
					<div class="panel panel-default TeamEventsList">
						<div class="panel-heading">
							<h3 class="panel-title">{{ "fodbald_streams_team_matches_title"|t }}</h3>
						</div>
						<div class="panel-body">				
							<ul id="TeamEvents">
								{% for event in events %}
									<li>
										<a href="{{ event.link }}">{{ event.name }}</a>
										<span><i class="fa fa-calendar"></i>{{ event.date|date("d. F Y") }}</span>
									</li>
								{% endfor %}
							</ul>
						</div>
						<div class="panel-footer">
							<div class="holder"></div> 
						</div>
					</div>
				</div>
			{% endif%}
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col col-md-12 col-sm-12 col-xs-12 ProviderLinkBlock">
				<div class="ProviderLinkContent">
					<h2>
						{{ "fodbald_streams_provider_links_head"|t }}
						<span>{{ "fodbald_streams_provider_links_subhead"|t }}</span>
					</h2>
					<a href="#" class="btn">{{ "fodbald_streams_provider_links_button"|t }}</a>
				</div>
				<p class="disclaimer">{{ "fodbald_streams_provider_links_disclaimer"|t }}</p>
				<p class="warning">{{ "fodbald_streams_provider_links_warning"|t }}</p>
				<a class="popup" href="#popup1">{{ "fodbald_streams_provider_links_popup"|t }}</a>
			</div>
		</div>	
	</div>
</section>	