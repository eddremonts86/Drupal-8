                    <a href="http://www.watchfooty.co.uk">
                        <div class='c-flag c-flag--uk'>UK</div>
                    </a>
                </li>
            </ul>
        </nav>
        <div class='o-header__main'>
            <a href='/' class='o-header__main__logo'></a>
            <div class="menu_top">
                {% if page.navigation_collapsible %}
                    {{ page.navigation_collapsible }}
                {% endif %}
            </div>
        </div>
        {% if is_front == false %}
            <nav class='o-header__secondary'>
            <ul>
                <li>
                    <a href='/node/15'>Fodbold Forside</a>
